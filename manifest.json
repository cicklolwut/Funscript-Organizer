{
  "manifest_version": 2,
  "name": "Funscript Download Tracker",
  "version": "0.1.4",
  "description": "Track and match .funscript files with video downloads",
  
  "applications": {
    "gecko": {
      "id": "funscript-tracker@example.com",
      "strict_min_version": "58.0"
    }
  },
  
  "permissions": [
    "downloads",
    "downloads.open",
    "storage",
    "nativeMessaging",
    "notifications",
    "tabs"
  ],
  
  "background": {
    "scripts": ["background_v2.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "Funscript Download Tracker"
  },
  
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}